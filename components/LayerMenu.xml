<?xml version="1.0" encoding="utf-8" ?>
<component name="LayerMenu" extends="Group">
  <script type="text/brightscript" uri="LayerMenu.brs"/>

  <children>
    <RowList 
      id = "lGrid" 
      translation = "[ 50, 260 ]" 
      itemComponentName = "RowListItem" 
      numRows = "4" 
      itemSize = "[ 1608, 350 ]" 
      rowItemSize = "[ [150, 300] ]" 
      itemSpacing = "[ 0, 40 ]" 
      rowItemSpacing = "[[50, 0]]"
      showRowLabel = "[ true ]" 
      drawFocusFeedback = "false" 
      vertFocusAnimationStyle = "fixedFocusWrap" 
      rowFocusAnimationStyle = "fixedFocusWrap" />


    <LayoutGroup translation="[50,50]" itemSpacings="[10]">
    <Label
        id="lbTopTitle"
        font = "font:LargeBoldSystemFont"
    />
    <Label
        id="lbTopDesc"
        width = "1000"
        height = "400"
        wrap = "true"
    />
      
  </LayoutGroup>
<Label id="no_results" visible="false" width = "1280" horizAlign = "center" translation = "[0, 560]"/>

  <Search translation="[30, 200]" visible="false" id="search" clippingRect="[ 0.0, 0.0, 1280.0, 60.0 ]">
      <Label id="search_placeholder" translation="[30,12]" text = "Press * to search..."/>
  </Search>


  <Animation id="animation_expand_keyboard"
       duration="0.25"
       repeat="false"
       easeFunction="linear" >
      <FloatFieldInterpolator 
        key="[0.0, 1.0]"
        keyValue="[ 60.0 , 303.0 ]"
        fieldToInterp="search.vertical_clipping_rect" />
      <Vector2DFieldInterpolator 
        key="[0.0, 1.0]"
        keyValue="[ [50, 260] , [50, 500]]"
        fieldToInterp="lGrid.translation" />
    </Animation>

    
  <Animation id="animation_shrink_keyboard"
       duration="0.25"
       repeat="false"
       easeFunction="linear" >
      <FloatFieldInterpolator 
        key="[0.0, 1.0]"
        keyValue="[ 303.0 , 60.0  ]"
        fieldToInterp="search.vertical_clipping_rect" />
      <Vector2DFieldInterpolator 
        key="[0.0, 1.0]"
        keyValue="[ [50, 500] , [50, 260]]"
        fieldToInterp="lGrid.translation" />
    </Animation>
  </children>
</component>
