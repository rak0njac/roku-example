          maxWidth = "150" 
          font = "font:MediumBoldSystemFont" 
          translation = "[0, 240]"/>

      <ScrollingLabel
          id = "mgiYear"
          maxWidth = "150" 
          text = "test1"
          font = "font:SmallestSystemFont" 
          translation = "[0, 270]"/>

      <ScrollingLabel
          id = "mgiGenre"
          maxWidth = "150" 
          text = "test1"
          font = "font:SmallestSystemFont"
          translation = "[0, 290]" />

    <Poster 
    translation = "[5,5]"
    id = "isFavorite"
    width = "40"
    height = "40"
    uri = "pkg:/images/Star.png"/>
  </children>
